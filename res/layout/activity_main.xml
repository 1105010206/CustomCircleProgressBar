<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res/custom.circle.progressbar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="custom.circle.progressbar.MainActivity" >

    <custom.circle.progressbar.CustomCircleProgressBar
        android:id="@+id/first_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        custom:isShowText="true"
        custom:progressColor="@color/red"
        custom:maxProgress="100"
        custom:textSize="20sp"
        custom:textColor="@color/black"
        android:layout_centerInParent="true"
       />
</RelativeLayout>
